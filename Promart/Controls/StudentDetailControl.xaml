<UserControl x:Class="Promart.Controls.StudentDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Promart.Controls"
             mc:Ignorable="d" 
             MinWidth="600" Height="60">
    
    <Control.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Dictionaries/Data.xaml"/>
                <ResourceDictionary Source="../Dictionaries/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Control.Resources>

    <Grid Background="White">        
        <GroupBox>
            <GroupBox.Style>
                <Style TargetType="GroupBox">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource Color5}" />
                            <Setter Property="BorderBrush" Value="{StaticResource Color1}" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Cursor" Value="Hand" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </GroupBox.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <GroupBox
                    Header="Nome"
                    FontSize="{StaticResource MinSize}"
                    VerticalContentAlignment="Top">
                    <Label
                        x:Name="FullName"                                                
                        FontSize="{StaticResource DefaultSize}"
                        />
                </GroupBox>
                <GroupBox
                    Header="Idade"
                    Grid.Column="1"
                    FontSize="{StaticResource MinSize}"
                     VerticalContentAlignment="Top">
                    <Label
                        x:Name="Age"                        
                        HorizontalContentAlignment="Center"
                        FontSize="{StaticResource DefaultSize}"
                        />
                </GroupBox>
                <GroupBox
                    Header="Matrícula"
                    Grid.Column="2"
                    FontSize="{StaticResource MinSize}"
                     VerticalContentAlignment="Top">
                    <Label
                        x:Name="Registry"                  
                        HorizontalContentAlignment="Center"
                        FontSize="{StaticResource DefaultSize}"
                        />
                </GroupBox>
                <GroupBox
                    Header="Data Matrícula"
                    Grid.Column="3"
                    FontSize="{StaticResource MinSize}"
                     VerticalContentAlignment="Top">
                    <Label
                        x:Name="RegistryDate"                        
                        HorizontalContentAlignment="Center"
                        FontSize="{StaticResource DefaultSize}"
                        />
                </GroupBox>
                <Label
                    x:Name="Status"   
                    Grid.Column="4"
                    Margin="10 10"
                    Style="{StaticResource FilledInfoLabel}"/>
            </Grid>            
        </GroupBox>
    </Grid>
</UserControl>
