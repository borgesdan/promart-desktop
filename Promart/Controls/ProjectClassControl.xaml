<UserControl x:Class="Promart.Controls.ProjectClassControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Promart.Controls"
             mc:Ignorable="d" 
             MinWidth="600" Height="60">
    <Control.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Dictionaries/Data.xaml"/>
                <ResourceDictionary Source="../Dictionaries/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Control.Resources>

    <Grid Background="White">
        <GroupBox>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <GroupBox
                    Header="Ano"
                    FontSize="{StaticResource MinSize}"
                    VerticalContentAlignment="Top">
                    <Label
                        x:Name="FullName"                                                
                        FontSize="{StaticResource DefaultSize}"
                        />
                </GroupBox>
                <GroupBox
                    Header="Alunos"
                    Grid.Column="1"
                    FontSize="{StaticResource MinSize}"
                     VerticalContentAlignment="Top">
                    <Label
                        x:Name="RegistryDate"                        
                        FontSize="{StaticResource DefaultSize}"
                        />
                </GroupBox>                
                <GroupBox
                    Header="Turma atual"
                    Grid.Column="2"
                    FontSize="{StaticResource MinSize}"
                     VerticalContentAlignment="Top">
                    <StackPanel>
                        <CheckBox x:Name="CheckAction" Visibility="Collapsed" />
                        <ComboBox
                            x:Name="Action"
                            Grid.Column="2"
                            SelectedIndex="0"
                            VerticalAlignment="Center"
                            >
                            <ComboBoxItem                 
                                Content="-"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                />
                            <ComboBoxItem
                                Content="Rematricular"
                                />
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                
            </Grid>
            <GroupBox.Style>
                <Style TargetType="GroupBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=CheckAction, Path=IsChecked}" Value="True">
                            <Setter Property="Background" Value="LightGreen" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </GroupBox.Style>
        </GroupBox>
    </Grid>
</UserControl>
