<Page x:Class="Promart.Pages.StudenReEnrollPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Promart.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudenReEnrollPage"
      Loaded="Page_Loaded">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Dictionaries/Data.xaml"/>
                <ResourceDictionary Source="../Dictionaries/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <StackPanel>
            <GroupBox
                Header="Observação"
                Margin="5 10 0 30"
                FontSize="{StaticResource SmallSize}"
                Background="{StaticResource Color4}">
                <TextBlock
                    x:Name="Observation"
                    FontSize="{StaticResource NormalSize}"
                    Margin="10 20"
                    FontStyle="Italic"
                    TextWrapping="Wrap"                    
                    >                    
                </TextBlock>
            </GroupBox>
            <GroupBox
                Header="Barra de Pesquisa"
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="12">
                <StackPanel>
                    <TextBox
                        x:Name="FullName"
                        Margin="5 10"
                        MaxLength="4"
                        Style="{StaticResource FormTextBox}"/>
                    <Button  
                        x:Name="Search"
                        Content="PESQUISAR"
                        Height="30"
                        Margin="100 10"
                        Background="{StaticResource Color2}"
                        Foreground="White"
                        FontSize="{StaticResource DefaultSize}"
                        FontWeight="Bold"
                        Click="Search_Click">
                    </Button>                    
                </StackPanel>                
            </GroupBox>            
            <Expander 
                    Header="Resultado"                 
                    Style="{StaticResource FormExpander}">
                <StackPanel>
                    <Button 
                            x:Name="Apply"
                            Content="APLICAR"
                            Height="30"
                            Width="200"
                            Margin="10 10"
                            IsEnabled="False"
                            HorizontalAlignment="Right"
                            Background="{StaticResource Color2}"
                            Foreground="White"
                            FontSize="{StaticResource DefaultSize}"
                            FontWeight="Bold"
                            Click="Apply_Click"/>
                    <ScrollViewer 
                            MaxHeight="1000"
                            Margin="0 0 0 100">
                        <StackPanel
                                x:Name="ResultPanel"/>
                    </ScrollViewer>
                </StackPanel>
            </Expander>
        </StackPanel>
        
    </Grid>
</Page>
